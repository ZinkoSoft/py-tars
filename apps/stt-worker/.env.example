# MQTT Configuration
MQTT_URL=mqtt://localhost:1883
# MQTT_URL=mqtt://user:pass@192.168.1.100:1883

# Whisper Configuration
WHISPER_MODEL=base.en
# Options: tiny.en, base.en, small.en, medium.en, large-v2, large-v3

# STT Backend
STT_BACKEND=whisper
# Options: whisper (local), ws (WebSocket backend)

# WebSocket Backend (when STT_BACKEND=ws)
WS_URL=ws://localhost:8000/transcribe

# Audio Configuration
SAMPLE_RATE=16000
CHUNK_SIZE=512
CHANNELS=1

# VAD Configuration
VAD_AGGRESSIVENESS=3
# 0 = least aggressive, 3 = most aggressive
SILENCE_DURATION=1.0
# Seconds of silence before finalizing transcription

# Streaming Configuration
STREAMING_PARTIALS=0
# 0 = disabled, 1 = enabled
PARTIAL_INTERVAL=0.5
# Seconds between partial transcriptions

# Suppression Heuristics
SUPPRESS_ECHO=1
SUPPRESS_REPEATS=1
SUPPRESS_NOISE=1
ECHO_WINDOW_SECONDS=5.0
REPEAT_THRESHOLD=0.85

# FFT Telemetry (for UI spectrum visualization)
FFT_PUBLISH=1
# Publish FFT data to MQTT (stt/audio_fft)
FFT_WS_ENABLE=0
# Enable WebSocket FFT server
FFT_WS_HOST=0.0.0.0
FFT_WS_PORT=8765
FFT_WS_PATH=/fft

# Noise Floor Calibration
NOISE_CALIBRATION_DURATION=2.0
# Seconds to calibrate noise floor on startup

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
