# TARS UI Environment Configuration

# MQTT Configuration
MQTT_URL=mqtt://tars:pass@127.0.0.1:1883

# UI Configuration
UI_WIDTH=480
UI_HEIGHT=800
UI_FPS=30
UI_NUM_BARS=64
UI_FONT=Arial
UI_FULLSCREEN=0

# Layout Configuration
UI_LAYOUT_FILE=layout.json
UI_LAYOUT_ROTATION=0  # 0, 90, 180, or 270 degrees

# MQTT Topics
UI_AUDIO_TOPIC=stt/audio_fft
UI_PARTIAL_TOPIC=stt/partial
UI_FINAL_TOPIC=stt/final
UI_TTS_TOPIC=tts/status
UI_LLM_RESPONSE_TOPIC=llm/response

# FFT Websocket Configuration (preferred over MQTT audio)
UI_FFT_WS_ENABLE=1
UI_FFT_WS_URL=ws://0.0.0.0:8765/fft
UI_FFT_WS_RETRY=5.0

# Optional: Path to ui.toml config file
UI_CONFIG=/path/to/ui.toml
