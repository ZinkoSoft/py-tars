# MQTT Configuration
MQTT_URL=mqtt://user:pass@localhost:1883

# Logging
LOG_LEVEL=INFO

# Piper TTS Configuration
PIPER_VOICE=/voices/TARS.onnx

# TTS Behavior
TTS_STREAMING=0                    # Stream audio chunks as synthesized (0=disabled, 1=enabled)
TTS_PIPELINE=1                     # Pipeline long text into sentences (0=disabled, 1=enabled)
TTS_CONCURRENCY=1                  # Number of concurrent synthesis workers
TTS_SIMPLEAUDIO=0                  # Use simpleaudio for playback instead of paplay/aplay

# Aggregation
TTS_AGGREGATE=1                    # Merge consecutive messages with same utt_id (0=disabled, 1=enabled)
TTS_AGGREGATE_DEBOUNCE_MS=150      # Debounce window before flushing aggregated utterance (milliseconds)
TTS_AGGREGATE_SINGLE_WAV=1         # Synthesize aggregated text as single WAV (0=sequential, 1=single)

# Wake Acknowledgement Cache
TTS_WAKE_CACHE_ENABLE=1            # Enable caching of wake acknowledgements
TTS_WAKE_CACHE_DIR=/tmp/tars/wake-ack  # Directory for cached wake acknowledgement WAV files
TTS_WAKE_CACHE_MAX=16              # Maximum number of cached wake acknowledgement clips
TTS_WAKE_ACK_TEXTS=                # Pipe or comma separated wake acknowledgement phrases to pre-synthesize

# TTS Provider Selection
TTS_PROVIDER=piper                 # TTS provider: piper (local) or elevenlabs (cloud)

# ElevenLabs Configuration (when TTS_PROVIDER=elevenlabs)
ELEVEN_API_BASE=https://api.elevenlabs.io/v1
ELEVEN_API_KEY=                    # ElevenLabs API key (required for elevenlabs provider)
ELEVEN_VOICE_ID=                   # ElevenLabs voice identifier (required for elevenlabs provider)
ELEVEN_MODEL_ID=eleven_multilingual_v2  # ElevenLabs model name
ELEVEN_OPTIMIZE_STREAMING=0        # ElevenLabs streaming optimization level (0-3)
